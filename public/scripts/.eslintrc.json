{
    "extends": "angular",
    "plugins": [
        "standard"
    ],
    "rules": {
        "semi": ["error", "always"],
        "require-jsdoc": ["error", {
            "require": {
                "FunctionDeclaration": true,
                "MethodDefinition": true,
                "ClassDeclaration": true
            }
        }]
    },
    "globals": {
      "alert": true
    }
}
